@model IEnumerable<BigSchool_THBuoi4.Models.Course>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/Site.css" />

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.Date_Time.ToString().Substring(3, 2)
                    </div>
                    <div class="day">
                        @course.Date_Time.ToString().Substring(0, 2)
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @course.LectureName
                    </span>
                    <br />
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
                <div class="action">
                   @Html.ActionLink("Edit","Edit", new { id = @course.Id })
                   @Html.ActionLink("Delete","Delete", new { id = @course.Id })
                </div>
            </li>
        }
    </ul>
    </div>

